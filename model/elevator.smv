-- NuSMV model of an elevator.

MODULE Button()
	VAR
		pressed: boolean;
	ASSIGN
		init(pressed) := FALSE;

MODULE Elevator()
	VAR
		floor: 0..3;
	ASSIGN
		init(floor) := 3;
		next(floor) := (floor + 1) mod 4;

MODULE main
	VAR
		elevator: Elevator();
		button0: Button();
		button1: Button();
		button2: Button();
		button3: Button();
